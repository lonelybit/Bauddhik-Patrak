<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/geet_type_lable"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/geet_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="Small Text - This is going to be center aligned and longer text to check hot it will get rendered at runtimea"
            android:id="@+id/geet_contents"
            android:layout_marginTop="18dp"
            android:textColor="@android:color/black"
            android:padding="5dp" />
    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Medium Text - Some long geet title can go here"
        android:id="@+id/geet_title"
        android:layout_below="@+id/geet_type_lable"
        android:layout_centerHorizontal="true"
        android:textColor="@color/appTitleBlue"
        android:padding="5dp" />




</RelativeLayout>